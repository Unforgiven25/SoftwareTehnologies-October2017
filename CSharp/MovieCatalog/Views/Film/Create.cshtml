@model IMDB.Models.Film

@{
    ViewBag.Title = "Create Film";
}

<h1>Create Film</h1>

<section>
    <div>

        @using (Html.BeginForm("Create", "Film", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

			@Html.ValidationSummary()

            <label for="name">Name</label>
	        <input type="text" id="name" name="name">
			@Html.ValidationMessageFor(f=>f.Name)

            <label for="genre">Genre</label>
	        <input type="text" id="genre" name="genre">
	        @Html.ValidationMessageFor(f=>f.Genre)

            <label for="director">Director</label>
	        <input type="text" id="director" name="director">
	        @Html.ValidationMessageFor(f=>f.Director)

            <label for="year">Year</label>
	        <input type="text" id="year" name="year">
	        @Html.ValidationMessageFor(f=>f.Year)

            <button type="submit" class="">Create</button>
            <button onclick="location.href='/';return false;" class="cancel">Cancel</button>
        }

    </div>
</section>